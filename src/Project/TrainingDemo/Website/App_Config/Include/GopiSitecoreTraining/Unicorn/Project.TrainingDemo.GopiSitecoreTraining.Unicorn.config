
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
	<sitecore>
		<unicorn>
			<configurations>
	
				<configuration name="Project.TrainingDemo.Trnwebsite" description="This configuration serializes the main website, Home node, and layout with the folder structure.">
					<predicate>
						
						<include name="Layouts" database="master" path="/sitecore/layout/Layouts/Project/TRN/TrainingDemo" />
						<include name="ProjectTemplates" database="master" path="/sitecore/templates/Project/TRN" />
						
						
					</predicate>
					<dataProviderConfiguration enableTransparentSync="false" />

					<syncConfiguration updateLinkDatabase="false" updateSearchIndex="false" />
				</configuration>
			</configurations>
		</unicorn>
	</sitecore>
</configuration>
