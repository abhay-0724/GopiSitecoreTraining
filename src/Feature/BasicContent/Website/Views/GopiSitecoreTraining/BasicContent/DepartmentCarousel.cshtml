@model IEnumerable<GopiSitecoreTraining.Feature.BasicContent.Models.DepartmentCarousel>
    <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var carouselItem in Model)
            {
                <div class="carousel-item @carouselItem.IsActive">
                    <img class="d-block w-50" src="@carouselItem.CarouselImage" alt="@carouselItem.CarouselImageAlt">
                    <div class="carousel-caption d-none d-md-block">
                    <h5>@carouselItem.CarouselTitle</h5>
                    <p>@carouselItem.CarouselDescription</p>
                    </div>
                </div>


            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
